<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.mysns.dao.ManageDao">

    <select id="dbtest" resultType="com.app.mysns.dto.SnsTypeDto">
        SELECT * FROM sns_type
    </select>

    <insert id="emailJoin" parameterType="com.app.mysns.dto.ClientDto">
        INSERT INTO client (
            username,
            password,
            name,
            phone,
            updated_at,
            created_at
        ) VALUES (
                     #{username},
                     #{password},
                     #{name},
                     #{phone},
                     #{updated_at},
                     #{created_at}
                 )
    </insert>

    <select id="login" parameterType="String" resultType="com.app.mysns.dto.ClientDto">

        SELECT username,password FROM client WHERE username = #{username}
    </select>




</mapper>
