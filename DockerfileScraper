FROM ubuntu:18.04

ENV DEBIAN_FRONTEND noninteractive

COPY . /app
WORKDIR /app/scraping

RUN apt-get update -y && \
    apt-get install -y python3-pip
# RUN apt-get install -y apt-utils

# Node js install
RUN apt-get install -y curl
RUN curl -sL https://deb.nodesource.com/setup_14.x | bash -
RUN apt-get install -y nodejs
RUN apt-get install build-essential
# Install check
RUN node -v
RUN npm -v
# npm install
# RUN npm install

# RUN apt-get install -y google-chrome-stable --no-install-recommends
# RUN sudo apt-get install -f

RUN ls -al /app
RUN ls -al /app/scraping

# puppeteer install with dependency 
RUN apt-get install libgtk2.0-0 libgtk-3-0 libnotify-dev
RUN apt-get install libgconf-2-4 libnss3 libxss1
RUN apt-get install libasound2 libxtst6 xauth xvfb
RUN apt-get install libgbm-dev
RUN npm install puppeteer

RUN npm install dotenv
RUN touch hello.js
RUN echo "console.log('hello world')" > hello.js
RUN ls -la
RUN node hello.js
RUN node index.js
# command exec
# CMD ["node", "index.js"]

# web 소켓으로 결과물 전송